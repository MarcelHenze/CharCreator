<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="de.plathe.CharErstellung" >

    <EditText
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:hint="Charactername" />

    <LinearLayout
        android:id="@+id/klassen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/klasse1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/reroll_button"
            android:layout_marginRight="5dp"
            android:src="@drawable/dice" />

        <ImageView
            android:id="@+id/klasse2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/reroll_button"
            android:layout_marginRight="5dp"
            android:src="@drawable/dice" />

        <ImageView
            android:id="@+id/klasse3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/reroll_button"
            android:src="@drawable/dice" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/geschlecht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/male"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/reroll_button"
            android:layout_marginRight="5dp"
            android:src="@drawable/male" />

        <ImageView
            android:id="@+id/female"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/reroll_button"
            android:src="@drawable/female" />
    </LinearLayout>
    
    <Button 
        android:id="@+id/createChar"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Weiter"/>

</LinearLayout>